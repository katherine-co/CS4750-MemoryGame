<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#fcfaf8"
	tools:context="com.android.memoryGame.MainActivity">

	<TextView
		android:id="@+id/textView2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Choose a Mode"
		android:textSize="30sp"
		android:textStyle="bold"
		android:textColor="#0a2342"
		app:layout_constraintBottom_toBottomOf="@id/easy"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<Button
		android:id="@+id/easy"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Easy"
		android:textColor="#0a2342"
		android:backgroundTint="#84bc9c"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="@id/medium"
		app:layout_constraintBottom_toBottomOf="@id/textView2"/>

	<Button
		android:id="@+id/medium"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Medium"
		android:textColor="#0a2342"
		android:backgroundTint="#84bc9c"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@id/easy" />

	<Button
		android:id="@+id/hard"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Hard"
		android:textColor="#0a2342"
		android:backgroundTint="#84bc9c"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@id/medium" />

</androidx.constraintlayout.widget.ConstraintLayout>